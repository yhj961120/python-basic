function fn_del(){
	 var flag = confirm("한번 지원진 데이터는 복구가 불가합니다. \n 그래도 삭제하시겠습니까?");
	 if(!flag){
		 return;
	 }
	location.href = "emp_del_act?e_id=<%=emp.getE_id()%>";
}
